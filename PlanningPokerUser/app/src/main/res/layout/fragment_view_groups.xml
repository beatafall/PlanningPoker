<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ViewGroups">

    <TextView
        android:id="@+id/theUserName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Here comes the voter's name"
        android:textAlignment="center"
        android:textSize="20dp"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_groups"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/theUserName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@+id/theUserName"/>

</androidx.constraintlayout.widget.ConstraintLayout>